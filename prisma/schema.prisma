generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String         @id @default(cuid())
  clerkId         String         @unique
  email           String         @unique
  createdAt       DateTime       @default(now())
  isDeleted       Boolean        @default(false)
  deletedAt       DateTime?
  dailyUsageCount Int            @default(0)
  lastUsageDate   DateTime?
  collaborators   Collaborator[]
  decks           Deck[]
}

model Deck {
  id            String         @id @default(cuid())
  userId        String
  title         String
  content       String
  summary       String
  sourceType    String         @default("doc")
  fileUrl       String?
  fileType      String?
  isPublic      Boolean        @default(false)
  createdAt     DateTime       @default(now())
  isDeleted     Boolean        @default(false)
  deletedAt     DateTime?
  cards         Card[]
  messages      ChatMessage[]
  collaborators Collaborator[]
  user          User           @relation(fields: [userId], references: [id])
  mindmap       MindMap?
  quizzes       Quiz[]
}

model Card {
  id        String    @id @default(cuid())
  deckId    String
  front     String
  back      String
  isDeleted Boolean   @default(false)
  deletedAt DateTime?
  deck      Deck      @relation(fields: [deckId], references: [id], onDelete: Cascade)
}

model Quiz {
  id        String    @id @default(cuid())
  deckId    String
  question  String
  options   String
  answer    String
  hint      String?
  isDeleted Boolean   @default(false)
  deletedAt DateTime?
  deck      Deck      @relation(fields: [deckId], references: [id], onDelete: Cascade)
}

model ChatMessage {
  id        String    @id @default(cuid())
  deckId    String
  role      String
  content   String
  citation  String?
  createdAt DateTime  @default(now())
  isDeleted Boolean   @default(false)
  deletedAt DateTime?
  deck      Deck      @relation(fields: [deckId], references: [id], onDelete: Cascade)
}

model MindMap {
  id        String    @id @default(cuid())
  deckId    String    @unique
  nodes     String
  edges     String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  isDeleted Boolean   @default(false)
  deletedAt DateTime?
  deck      Deck      @relation(fields: [deckId], references: [id], onDelete: Cascade)
}

model Collaborator {
  id        String    @id @default(cuid())
  userId    String
  deckId    String
  role      String
  createdAt DateTime  @default(now())
  isDeleted Boolean   @default(false)
  deletedAt DateTime?
  deck      Deck      @relation(fields: [deckId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id])

  @@unique([userId, deckId])
}
