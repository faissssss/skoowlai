generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String         @id @default(cuid())
  clerkId             String         @unique
  email               String         @unique
  createdAt           DateTime       @default(now())
  isDeleted           Boolean        @default(false)
  deletedAt           DateTime?
  dailyUsageCount     Int            @default(0)
  lastUsageDate       DateTime?
  // Feature usage tracking
  flashcardUsageCount Int            @default(0)
  quizUsageCount      Int            @default(0)
  mindmapUsageCount   Int            @default(0)
  chatUsageCount      Int            @default(0)
  lastChatUsageDate   DateTime?
  // Subscription fields (Dodo Payments)
  subscriptionStatus  String         @default("free") // free, active, cancelled, expired
  subscriptionPlan    String? // monthly, yearly
  subscriptionId      String? // Dodo subscription ID
  customerId          String? // Dodo customer ID
  subscriptionEndsAt  DateTime?
  collaborators       Collaborator[]
  decks               Deck[]
  workspaces          Workspace[]
  AuditLog            AuditLog[]
}

model Workspace {
  id          String    @id @default(cuid())
  name        String
  description String?
  color       String    @default("#6366f1")
  userId      String
  user        User      @relation(fields: [userId], references: [id])
  decks       Deck[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  isDeleted   Boolean   @default(false)
  deletedAt   DateTime?

  @@index([userId])
}

model Deck {
  id            String         @id @default(cuid())
  userId        String
  title         String
  content       String
  summary       String
  sourceType    String         @default("doc")
  fileUrl       String?
  fileType      String?
  isPublic      Boolean        @default(false)
  noteConfig    Json? // Stores { depth, style, tone } preferences after generation
  workspaceId   String?
  createdAt     DateTime       @default(now())
  isDeleted     Boolean        @default(false)
  deletedAt     DateTime?
  cards         Card[]
  messages      ChatMessage[]
  collaborators Collaborator[]
  user          User           @relation(fields: [userId], references: [id])
  workspace     Workspace?     @relation(fields: [workspaceId], references: [id])
  mindmap       MindMap?
  quizzes       Quiz[]

  @@index([userId])
  @@index([workspaceId])
}

model Card {
  id        String    @id @default(cuid())
  deckId    String
  front     String
  back      String
  isDeleted Boolean   @default(false)
  deletedAt DateTime?
  deck      Deck      @relation(fields: [deckId], references: [id], onDelete: Cascade)

  @@index([deckId])
}

model Quiz {
  id        String    @id @default(cuid())
  deckId    String
  question  String
  options   String
  answer    String
  hint      String?
  isDeleted Boolean   @default(false)
  deletedAt DateTime?
  deck      Deck      @relation(fields: [deckId], references: [id], onDelete: Cascade)

  @@index([deckId])
}

model ChatMessage {
  id        String    @id @default(cuid())
  deckId    String
  role      String
  content   String
  citation  String?
  createdAt DateTime  @default(now())
  isDeleted Boolean   @default(false)
  deletedAt DateTime?
  deck      Deck      @relation(fields: [deckId], references: [id], onDelete: Cascade)

  @@index([deckId])
}

model MindMap {
  id        String    @id @default(cuid())
  deckId    String    @unique
  nodes     String
  edges     String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  isDeleted Boolean   @default(false)
  deletedAt DateTime?
  deck      Deck      @relation(fields: [deckId], references: [id], onDelete: Cascade)

  @@index([deckId])
}

model Collaborator {
  id        String    @id @default(cuid())
  userId    String
  deckId    String
  role      String
  createdAt DateTime  @default(now())
  isDeleted Boolean   @default(false)
  deletedAt DateTime?
  deck      Deck      @relation(fields: [deckId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id])

  @@unique([userId, deckId])
  @@index([deckId])
  @@index([userId])
}

model AuditLog {
  id         String   @id @default(cuid())
  userId     String
  action     String // e.g. "GENERATE_DECK", "DELETE_DECK"
  resourceId String?
  details    String? // JSON string or text summary
  ipAddress  String?
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([action])
}
