// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============ MODELS ============

model User {
  id            String         @id @default(cuid())
  clerkId       String         @unique  // Clerk user ID for authentication
  email         String         @unique
  createdAt     DateTime       @default(now())
  isDeleted     Boolean        @default(false)
  deletedAt     DateTime?
  decks         Deck[]
  collaborators Collaborator[]
}

model Deck {
  id            String         @id @default(cuid())
  userId        String
  title         String
  content       String         // Original extracted text
  summary       String         // Generated notes (Markdown)
  sourceType    String         @default("doc") // 'doc', 'youtube', or 'audio'
  fileUrl       String?        // Optional file URL for uploaded documents
  fileType      String?        // Optional MIME type of the uploaded file
  isPublic      Boolean        @default(false) // Anyone with link can view
  createdAt     DateTime       @default(now())
  isDeleted     Boolean        @default(false)
  deletedAt     DateTime?
  
  user          User           @relation(fields: [userId], references: [id])
  cards         Card[]
  quizzes       Quiz[]
  messages      ChatMessage[]
  mindmap       MindMap?
  collaborators Collaborator[]
}

model Card {
  id        String    @id @default(cuid())
  deckId    String
  front     String
  back      String
  isDeleted Boolean   @default(false)
  deletedAt DateTime?
  
  deck      Deck     @relation(fields: [deckId], references: [id], onDelete: Cascade)
}

model Quiz {
  id        String    @id @default(cuid())
  deckId    String
  question  String
  options   String    // JSON string of options
  answer    String    // Correct answer
  hint      String?   // Optional hint for the question
  isDeleted Boolean   @default(false)
  deletedAt DateTime?
  
  deck      Deck     @relation(fields: [deckId], references: [id], onDelete: Cascade)
}

model ChatMessage {
  id        String    @id @default(cuid())
  deckId    String
  role      String    // 'user' or 'assistant'
  content   String
  citation  String?   // Optional citation text
  createdAt DateTime  @default(now())
  isDeleted Boolean   @default(false)
  deletedAt DateTime?
  
  deck      Deck     @relation(fields: [deckId], references: [id], onDelete: Cascade)
}

model MindMap {
  id        String    @id @default(cuid())
  deckId    String    @unique
  nodes     String    // JSON string of React Flow nodes
  edges     String    // JSON string of React Flow edges
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  isDeleted Boolean   @default(false)
  deletedAt DateTime?
  
  deck      Deck     @relation(fields: [deckId], references: [id], onDelete: Cascade)
}

model Collaborator {
  id           String    @id @default(cuid())
  userId       String
  deckId       String
  role         String    // 'VIEWER', 'EDITOR', 'OWNER'
  createdAt    DateTime  @default(now())
  isDeleted    Boolean   @default(false)
  deletedAt    DateTime?
  
  user         User      @relation(fields: [userId], references: [id])
  deck         Deck      @relation(fields: [deckId], references: [id], onDelete: Cascade)
  
  @@unique([userId, deckId]) // One role per user per deck
}
